<h1>Items</h1>

<table class="table">
  <thead>
    <tr class="table-info">
      <th>id</th>
      <th>title</th>
      <th>start_date</th>
      <th>duration</th>
      <th>price</th>
      <th>location</th>
      <th>admin</th>
      <th>reviewed</th>
      <th>validated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.sort_by{ |item| item.created_at }.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Show', admin_item_path(item) %></td>
        <td><%= link_to 'Edit', edit_admin_item_path(item) %></td>
        <td><%= link_to 'Destroy', admin_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

