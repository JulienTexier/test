    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <br><br><br>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          
          <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <br>

            <div class="form-group">
              <%= f.label "Mot de Passe" %> <i>(laisser vide si le mot de passe reste inchangé)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>
            <br>

            <div class="form-group">
              <%= f.label "Confirmation" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>


            <div class="form-group">
              <%= f.label "Mot de Passe actuel" %> <i>(la confirmation des changements nécessite votre mot de passe actuel)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <div class="actions mt-5">
              <%= f.submit "Editer", class: "btn btn-lg primary-btn btn-block" %>
            </div>
          <% end %><br>

          <%= link_to "Retour", :back %>

          <br><br><br><br><br><br>
          <h3 class="h3 mb-3 font-weight-normal text-center">Supprimer mon Compte</h3>

          <p>Vous n'êtes pas satisfait de notre plateforme ? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr(e) de vouloir supprimer votre compte ? Cette action sera définitive." }, method: :delete, class: "btn btn-lg primary-btn btn-block" %></p>

          <%= link_to "Retour", :back %>
        </div>
      </div>
    </div>
    <div class="space"></div>

